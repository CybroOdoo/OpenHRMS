<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!--    Represents a disciplinary category for violations of company rules.-->
        <record id="discipline_category_violation" model="discipline.category">
            <field name="name">Violation of Company Rules</field>
            <field name="code">VIOLATION</field>
            <field name="category_type">disciplinary</field>
        </record>
        <!--   Defines a category for actions related to misbehaviour towards co-workers.-->
        <record id="discipline_category_mis_behaviour"
                model="discipline.category">
            <field name="name">Mis-behaviour to Co-workers</field>
            <field name="code">102</field>
            <field name="category_type">action</field>
        </record>
        <!--            Categorizes actions concerning damage to company properties.-->
        <record id="discipline_category_damage" model="discipline.category">
            <field name="name">Damage to company properties</field>
            <field name="code">103</field>
            <field name="category_type">disciplinary</field>
        </record>
        <!--  Represents a disciplinary category for not following management instructions.-->
        <record id="discipline_category_instruction"
                model="discipline.category">
            <field name="name">Not Follow Management Instructions</field>
            <field name="code">INSTRUCTION</field>
            <field name="category_type">disciplinary</field>
        </record>
        <!--  Represents a disciplinary category for not work performance issues.-->
        <record id="discipline_category_performance"
                model="discipline.category">
            <field name="code">INSTRUCTION</field>
            <field name="name">Work Performance Issues</field>
            <field name="category_type">disciplinary</field>
        </record>
        <!--  Denotes an action category where no disciplinary action is taken.-->
        <record id="discipline_category_no_action" model="discipline.category">
            <field name="code">NOACTION</field>
            <field name="name">No Action</field>
            <field name="category_type">action</field>
        </record>
        <!-- Defines an action category for issuing a verbal warning.-->
        <record id="discipline_category_verbal" model="discipline.category">
            <field name="code">VERBAL</field>
            <field name="name">Verbal Warning</field>
            <field name="category_type">action</field>
        </record>
        <!--            Details an action category for issuing a written warning.-->
        <record id="discipline_category_written" model="discipline.category">
            <field name="code">WRITTEN</field>
            <field name="name">Written Warning</field>
            <field name="category_type">action</field>
        </record>
        <!-- An action category for scheduling a meeting with the manager.-->
        <record id="discipline_category_meet" model="discipline.category">
            <field name="code">MEET</field>
            <field name="name">Meet the Manager</field>
            <field name="category_type">action</field>
        </record>
        <!-- Specifies an action category for employee suspension.-->
        <record id="discipline_category_suspend" model="discipline.category">
            <field name="code">SUSPENSION</field>
            <field name="name">Suspend the Employee</field>
            <field name="name">Suspend the Employee for one Week</field>
            <field name="category_type">action</field>
        </record>
        <!--            Outlines an action category for the termination of an employee.-->
        <record id="discipline_category_terminate" model="discipline.category">
            <field name="code">TERMINATE</field>
            <field name="name">Terminate the Employee</field>
            <field name="category_type">action</field>
        </record>
    </data>
</odoo>
